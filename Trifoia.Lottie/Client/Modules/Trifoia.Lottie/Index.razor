
@namespace Trifoia.Lottie
@inherits ModuleBase
@inject NavigationManager NavigationManager

<lottie-player src="@_src"
               background="@_background"
               speed="@_speed"  
               style="@_style"  
               loop="@_loop"
               autoplay="@_autoplay" ></lottie-player>

@code {
    public override List<Resource> Resources => new List<Resource>()
    {
        new Resource { ResourceType = ResourceType.Script, Url = "https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js" }
    };

    private string _src = "https://assets9.lottiefiles.com/datafiles/MUp3wlMDGtoK5FK/data.json";
    private string _background = "transparent";
    private string _speed = ".5";
    private string _style = "width: 300px; height: 300px;";
    private string _autoplay = "true";
    private string _loop = "true";

    protected override async Task OnInitializedAsync()
    {
        
    }

}